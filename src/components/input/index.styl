.oui-input
  position relative
  display inline-block
  margin 0 8px
  .label
    position absolute
    left 0px
    top 6px
    font-size 11px
    text-transform uppercase
    transition opacity 150ms cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 250ms cubic-bezier(0.23, 1, 0.32, 1)
    opacity 0
    transform translateY(0px)
    will-change opacity, transform
    &.show
      opacity 0.6
      transform translateY(-24px)
    &.highlight
      opacity 1
  input
    height 50px
    border-style none
    border-radius 3px
    font-size 15px
    margin-bottom 30px
    padding 2px 16px 0px
    line-height 18px
    font-family 'Gotham Light'
    letter-spacing 0.4px
    .invalid
      box-shadow inset 0 -2px 0 0px $codeText
    &.dark
      color rgba(#fff, 0.9)
      background rgba(0, 0, 0, 0.1)
    &.light
      color $storm
      background rgba(0, 0, 0, 0.05)

::-webkit-input-placeholder
  color $storm
  font-family 'Gotham Light'
  letter-spacing 0.4px
